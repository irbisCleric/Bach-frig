// Use this file as a starting point for your project's .eslintrc.
// Copy this file, and add rule overrides as needed.

{
  "extends": [
    "recommended/esnext",
    "recommended/esnext/style-guide",
    "recommended/node",
    "recommended/node/style-guide"
  ],
   "rules": {
     "linebreak-style": 0,
     "quotes": ["error", "double"],
     "semi": ["error", "always"],
     "indent": ["error", 4],
     "no-var": "error",
     "no-console": "off",
     "no-debugger": "warn",
     "import/no-commonjs": "off"
   },
   "env": {
     "node": true,
     "commonjs": false
   }
}
